package Aula02;
import java.util.Scanner;

public class Atividade06 {
public static void main (String[] args) {
	Scanner scanner = new Scanner(System.in);
	
	System.out.print("Digite a nome da pessoa: ");
	String nome = scanner.nextLine();
	
	System.out.print("Digite o seu signo do " + nome + ": ");
	String signo = scanner.nextLine();
	
	System.out.print("Digite a idade da " + nome + ": ");
	int idade = scanner.nextInt();
	
	System.out.print("o " + nome +" tem " + idade + " anos, e Ã© do signo "+signo+ ".");
	scanner.close();
}
}
